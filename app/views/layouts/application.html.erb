<!DOCTYPE html>
<html>
<head>
  <title>HealthView</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery.scrollTo" %>
  <%= javascript_include_tag "raphael-min" %>
  <%= javascript_include_tag "g.raphael-min" %>
  <%= javascript_include_tag "g.bar-min" %>
  <%= javascript_include_tag "g.line-min" %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="navigation">
  <div id="apptitle">Platform Health Viewer</div>
  <div id="menu">
    <span id="menuitem_screen" class="menuitem"><%= link_to "Dashboard screen", "/screens/1/frames" %></span>
    <span id="menuitem_tags" class="menuitem"><%= link_to "Tageditor", tags_path %></span>
  </div>
  <span id="addbutton">+</span>
</div>

<div id="content">
  <%= yield %>
</div>

</body>
</html>
