$("#notice").removeClass("error");
$("#notice").hide();
<% if flash[:notice] then %>
  $("#new_tag")[0].reset();
  $("#tags").prepend('<%= escape_javascript(render(@tag)) %>');
  $("#tag_<%= @tag.id %>").hide();

  $("body").scrollTo(0, 1000, { onAfter: function() {
    $("#tag_<%= @tag.id %>").slideDown(1200);
  }});

<% else %>
  $("#notice").addClass("error");
  $("#notice").html('<%= escape_javascript(flash.delete(:error)) %>');
  $("#notice").fadeIn(1400, function() {
    $("#notice").fadeOut(1400, function() {
      $("#notice").removeClass("error");
    });
  });
<% end %>
